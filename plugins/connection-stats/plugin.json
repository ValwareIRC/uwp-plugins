{
  "id": "connection-stats",
  "name": "Connection Statistics",
  "version": "1.0.0",
  "author": "ValwareIRC",
  "description": "Advanced connection statistics and analytics with historical tracking and trend analysis.",
  "category": "monitoring",
  "license": "MIT",
  "repository": "https://github.com/ValwareIRC/uwp-plugins",
  "tags": ["statistics", "analytics", "monitoring", "graphs", "history"],
  "min_panel_version": "2.0.0",
  "entry_point": "main.go",
  "hooks": ["on_user_connect", "on_user_disconnect", "on_panel_startup"],
  "config_schema": {
    "type": "object",
    "properties": {
      "retention_days": {
        "type": "integer",
        "description": "Number of days to retain historical data",
        "default": 30,
        "minimum": 7,
        "maximum": 365
      },
      "sample_interval": {
        "type": "integer",
        "description": "Interval in minutes between data samples",
        "default": 5,
        "minimum": 1,
        "maximum": 60
      },
      "track_by_country": {
        "type": "boolean",
        "description": "Track statistics by country",
        "default": true
      }
    }
  }
}
